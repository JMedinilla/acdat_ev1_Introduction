<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.javi.ejercicio_jmedinilla.ElegirCambio"
    android:background="#7777E4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Moneda inicial:"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/edt_inicial"
        android:layout_alignBottom="@+id/edt_inicial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#c1fff4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado:"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#c1fff4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cifra de cambio:"
        android:id="@+id/textView6"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#c1fff4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:id="@+id/btn_converCambio"
        android:layout_marginTop="38dp"
        android:width="120dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/edt_cambio"
        android:layout_alignEnd="@+id/edt_cambio"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="#c1fff4"
        android:background="@drawable/rounded_corner2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_cambio"
        android:width="175dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#0099CC"
        android:textStyle="italic"
        android:textColor="#c1fff4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_inicial"
        android:width="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:background="#0099CC"
        android:textStyle="italic"
        android:textColor="#c1fff4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_resultado"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#0099CC"
        android:textStyle="bold"
        android:enabled="false"
        android:editable="true"
        android:textColor="#c1fff4" />
</RelativeLayout>
